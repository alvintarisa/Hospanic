<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Home">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="645dp"
        android:background="@drawable/backgound_view2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judul_transaksi"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:background="@color/darken_blue"
            android:text="PROFILE"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="83dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="23dp"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/doctor_by_memed_nurrohmad"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="308dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nama_pengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:hint="Nama"
                    android:text="Andy Soetomo"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/alamat_pengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black"
                    android:hint="Alamat"
                    android:text="Jln. Ikan Nila, Kab. Malang, Jawa Timur"/>

                <TextView
                    android:id="@+id/btn_aktivasi"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Aktivasi Panic Button"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:background="@drawable/item_card_view_home"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>